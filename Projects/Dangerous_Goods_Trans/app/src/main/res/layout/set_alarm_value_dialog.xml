<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="left"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/T1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="低警报阈值"
                android:textColor="#131212"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_alarmOn_dataValue_low"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:hint="请输入"
                android:text="20"
                android:inputType="number"/>

            <TextView
                android:id="@+id/T2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="低警报持续时间"
                android:textColor="#131212"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_alarmOn_timeValue_low"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:hint="请输入"
                android:text="20"
                android:inputType="number"/>

            <TextView
                android:id="@+id/T3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="高警报阈值"
                android:textColor="#131212"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_alarmOn_dataValue_high"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:hint="请输入"
                android:text="50"
                android:inputType="number"/>

            <TextView
                android:id="@+id/T4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="高警报持续时间"
                android:textColor="#131212"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_alarmOn_timeValue_high"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:hint="请输入"
                android:text="10"
                android:inputType="number"/>

            <TextView
                android:id="@+id/T5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="低警报解除阈值"
                android:textColor="#131212"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_alarmOff_dataValue_low"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:hint="请输入"
                android:text="20"
                android:inputType="number"/>

            <TextView
                android:id="@+id/T6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="低警报解除持续时间"
                android:textColor="#131212"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_alarmOff_timeValue_low"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:hint="请输入"
                android:text="20"
                android:inputType="number"/>

            <TextView
                android:id="@+id/T7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="高警报解除阈值"
                android:textColor="#131212"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_alarmOff_dataValue_high"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:hint="请输入"
                android:text="50"
                android:inputType="number"/>

