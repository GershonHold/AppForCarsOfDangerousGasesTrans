<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/picture_imageview">

    <ImageView
        android:id="@+id/iv_advertisement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:src="@drawable/car" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_advertisement"
        android:layout_alignParentStart="true"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="274dp"
        android:text="传感器(车尾右)实时浓度%"
        android:textColor="#FFFDFD" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_advertisement"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="103dp"
        android:text="传感器(车头右)实时浓度%"
        android:textColor="#FFFDFD" />

    <TextView
        android:id="@+id/TAIL_EXP"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_advertisement"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="274dp"
        android:layout_toEndOf="@+id/textView6"
        android:text="0"
        android:textColor="#FFFDFD" />

    <TextView
        android:id="@+id/HEAD_EXP"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_advertisement"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="102dp"
        android:layout_toEndOf="@+id/textView17"
        android:text="0"
        android:textColor="#FFFDFD" />

</RelativeLayout>